
$(document).ready(function() {
	
	// Javascript that replaces the events list with the list of filtered events
	// This file is automatically called when respond_to block in filter action is executed
	// ATfiltered variable is passed here from the filter action in the controller
	// the partial is rendered in the events-list html tag
	

	$('.events-list').html("<%= j render(:partial => 'filtered_events', :locals => { :filtered => @filtered }) %>");

});